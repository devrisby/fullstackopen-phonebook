{
  "name": "fullstackopen-phonebook",
  "version": "1.0.0",
  "description": "fullstackopen part 3 exercise and more",
  "main": "src/index.ts",
  "scripts": {
    "heroku-prebuild": "cd ./frontend && npm i",
    "start": "npm run build && node build/index.js",
    "start:dev": "cross-env NODE_ENV=dev concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd ./frontend && npm run dev",
    "start:backend": "cross-env NODE_ENV=dev ts-node-dev --respawn src/index.ts",
    "build": "npm-run-all build:backend build:frontend",
    "build:backend": "rimraf ./build && tsc",
    "build:frontend": "cd ./frontend && npm run build && cp -Tr dist ../dist_client && rm -rf dist",
    "lint": "eslint --ignore-path .eslintignore --ext .ts .",
    "format": "prettier --ignore-path .prettierignore --check 'src/**/*.ts' 'test/**/*.ts'",
    "lint-staged": "lint-staged",
    "seed:dev": "cross-env NODE_ENV=dev node build/scripts/seed.js",
    "seed:prod": "node build/scripts/seed.js"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.2",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0"
  }
}
